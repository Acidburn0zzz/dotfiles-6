tabSize          = 4

[ source.python ]
tabSize          = 4

[ source.js ]
tabSize          = 4

[ source.js ]
TM_JAVASCRIPT_BRACE_PREFIX = '
'

[ "{README,INSTALL,LICENSE,TODO,NOTICE,HISTORY,CHANGES,CHANGELOG}" ]
