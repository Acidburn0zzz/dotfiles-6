# Always sort
--sort-files

# Always color
--color

# Print one line of context around matches
--context=1

# Group the results by file
--group

# Follow symlinks
--follow

# Types
--type-add
ruby:ext:rake
--type-add
html:ext:haml,erb
--type-add
css:ext:sass,scss,less
--type-add
js:ext:ejs,coffee
--type-set
rack:ext:ru
--type-set
log:ext:log,log.1,log.2,log.3
--type-set
undo:ext:un~

# Ignores
--ignore-dir=.sass-cache
--ignore-dir=cache
--ignore-dir=CACHE
--ignore-dir=target
--ignore-dir=tmp
--type=noundo
--type=nolog

