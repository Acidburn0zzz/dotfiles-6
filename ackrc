# Always sort
--sort-files

# Always color
--color

# Print one line of context around matches
--context=1

# Group the results by file
--group

# Follow symlinks
--follow

# Types
--type-add
ruby=.rake
--type-add
html=.haml,.erb
--type-add
css=.sass,.scss,.less
--type-add
js=.ejs,.coffee
--type-set
rack=.ru
--type-set
log=.log,.log.1,.log.2,.log.3
--type-set
undo=.un~

# Ignores
--ignore-dir=.sass-cache,target,CACHE
--type=noundo
--type=nolog
--type=nobinary

